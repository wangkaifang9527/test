/**app.wxss**/
@import "./lib/iconfont.wxss"; 
page{
  background: #f6f6f6;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  color: #333;
  font-size: 28rpx;
} 

.tip_center {
  margin: 10px 0;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 12px;
}


/* 遮罩 */
.kf_zhezhao{
    position:fixed;
    width:100%;
    height:100%;
    bottom:0px;
    background:rgba(0,0,0,0.8);
    overflow: hidden;
    z-index: 999;
}
.kf_zhezhaokuang{
  background: rgba(255,255,255,1);
  height: 300rpx;
  width: 90%;
  margin: 0rpx 5%;
  border-radius: 10rpx;
  margin-top: 280rpx;
  text-align: center;
  color: #333;
  font-size: 32rpx;
  padding-top: 50rpx;
}
.kf_zhezhaokuang_wenben{
  padding-top: 10rpx;
}
.kf_zhezhaokuang_button{
  margin-top: 50rpx;
}
.kf_zhezhaokuang_button button{
  background: #13344B;
  width: 80%;
  border-radius: 100rpx;
  letter-spacing: 20rpx;
  color: #fff;
}

button::after{
  border: none;
}
button{
  color: #fff;
  text-align: center;
  border-radius: 100rpx;
  box-shadow:2px 0px 9px rgba(0,0,0,0.32);
}




.active:active{
  opacity: 0.6
}

/* 从下往上显示 */
.kind-list-item-bd {
  height: 0;
  opacity: 0;
  overflow: hidden;
  transform:  translateY(100%);
  transition: .3s;
  
}
.kind-list-item-bd-show {
  /* height: auto; */
  opacity: 1;
  transform: translateY(0%);
  background: rgba(0,0,0,0.8);
  position:fixed;
  width:100%;
  height:100%;
  bottom:0px;
  z-index: 10;
}

/* 旋转 */
.kind-list-item-an {
  transition: transform 400ms linear 0ms;
  transform: rotate(0deg);
  transform-origin: 50% 50% 0px;
}
.kind-list-item-an-show {
  transition: transform 400ms linear 0ms;
  transform: rotate(180deg);
  transform-origin: 50% 50% 0px;
}

/* 蓝色大号按钮加阴影 */
.btn-blue-big{
  width:650rpx;
  height:82rpx;
  line-height: 82rpx;
  text-align: center;
  background:rgba(19,52,75,1);
  border-radius:41rpx;
  box-shadow:6px 0px 16px rgba(0,0,0,0.36);
  color: #fff;
  margin: 0 auto;
}
.btn-blue-big:active{
  opacity: 0.6
}

/* 按钮波纹效果 */
.btn-ripple-effect{
  overflow: hidden;
  position: relative;
}
.btn-ripple-effect:after {
  content: "";
  background: #90EE90;
  display: block;
  position: absolute;
  padding-top: 300%;
  padding-left: 350%;
  margin-left: -20px!important;
  margin-top: -120%;
  opacity: 0;
  transition:  0.8s
}
.btn-ripple-effect:active:after {
  padding: 0;
  margin: 0;
  opacity: 1;
  transition: 0s
}

/* 按压效果 */
.btn-press:active{
  transform: translateY(4px);
  opacity: 0.8
}
/*animation: arrow1 1.2s infinite; 
  播放次数 
  animation-iteration-count:2  */
/* 上下浮动 */
.btn-float{
  animation: arrow1 3s infinite;
}
@keyframes arrow1{
  0%{transform: translateY(0px);}
  50%{transform: translateY(5px);}
  100%{transform: translateY(0px);}
}

/* 缩放动画 */
.btn-zoom{
  animation: zoom 3s infinite;
}
@keyframes zoom{
  0%{transform: scale(1.2,1.2);}
  50%{transform: scale(1,1);}
  100%{transform: scale(1.2,1.2);}
}
/* 3D旋转 */
.btn-3d-rotate{
  animation: mymove 2s ease-in-out;
  opacity: 0
}
@keyframes mymove{
  0%{transform: rotateY(0deg); opacity: 1}
  100%{transform: rotateY(2880deg);opacity: 1}
}


.ck_list_list{
  height: 0;
  opacity: 0;
  overflow: hidden;
  transform:  translateY(-50%);
  transition: .4s;
}
.ck_list_list_show{
  height:auto;
  opacity: 1;
  transform: translateY(0%);
  transition: .4s;
}
