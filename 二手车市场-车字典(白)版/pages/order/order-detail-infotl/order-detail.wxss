}
.layout .layout-img image{
  width: 100%;
}
.layout .layout-line{
  width: 100%;
  text-align: center;
  color: #382B1D;
  margin-top: 10%;
}
.layout .h2{
  font-size: 34rpx;
}
.layout .h3{
  font-size: 32rpx;
}
.layout .h4{
  font-size: 28rpx;
}
.layout .h5{
  font-size: 22rpx;
  color: #fff;
  width: 170rpx;
  height: 57rpx;
  line-height: 57rpx;
  background: #13344B;
  border-radius: 57rpx;
  margin: 0 auto;
  margin-top: 10%;
}
.layout .h6{
  font-size: 22rpx;
  color: #999;
  width: 482rpx;
  margin: 0 auto;
  margin-top: 10%;
