/* 红包 */
.red-pag{
  width:535rpx;
  height:713rpx;
  background:rgba(205,83,61,1);
  border-radius:8rpx;
  margin: 0 auto;
  margin-top: 35%;
  position: relative;
  color: #fff;
  text-align: center;
}
.red-pag .line_top{
  width:98%;
  height:10%;
  border: 3px solid #A73823;
  border-radius: 0 0 50% 50%/0 0 100% 100% ;
  border-top: none;
  position: relative;
  top: 25%;
}
.red-pag .line_down{
  width:98%;
  height:10%;
  border: 3px solid #A73823;
  border-radius: 0 0 50% 50%/0 0 100% 100% ;
  border-top: none;
  position: relative;
  top: 25%;
}
.red-pag .chai{
  position: relative;
  text-align:center;
  top: 15%;
}
.red-pag .chai image{
  width: 130rpx;
  height: 130rpx;
}
.red-pag .avatar{
  width:90rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin: 0 auto;
  position:relative;
  top:7%;
}
.red-pag .nickname{
  position:relative;
  top:10%;
}
.red-pag .price{
  font-size: 32rpx;
  position:relative;
  top:14%;
}
.red-pag .price text{
  font-size: 120rpx;
  font-weight: bolder;
}
.red-pag .balance{
  font-size: 24rpx;
  position:relative;
  top:35%;
}
.red_open_show{
  animation: fly .8s
}
@keyframes fly{
  0%{left: -500rpx;transform: scale(.2,.2)}
  40%{left: -100rpx;transform: scale(.6,.6)}
  50%{left: 0rpx;transform: scale(.7,.7)}
  100%{left:0rpx;transform: scale(1,1)}
}

