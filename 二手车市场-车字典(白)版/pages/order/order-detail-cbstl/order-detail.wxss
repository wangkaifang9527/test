/* 车辆概要 */

.car_detail {
    padding-bottom: 15px;
    width: 650rpx;
}

.car_detail .line {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 15px;
   
}

.car_detail .line text:nth-child(1) {
    color: #666;
}

.car_detail .line text:nth-child(2) {
    color: #333;
}

.car_detail .line.top {
    padding: 20px 0;
    border-bottom: 1px solid #dedede;
}

.car_detail .line.top text:nth-child(1) {
    font-size: 15px;
}

/* 报告详情 */

.result_detail {
}

.result_detail .top {
}

.result_detail .top text {
    display: block;
    color: #666;
    margin-bottom: 10px;
    font-size: 15px;
}

.result_detail .top .h1 {
    display: block;
    font-size: 16px;
    color: #1c1e2f;
    padding-top: 15px;
    padding-bottom: 5px;
}

.result_detail .line {
    margin-bottom: 10px;
    margin-left: -15px;
    margin-right: -15px;
    background: #fff;
    border-radius: 10px;
    position: relative;
    width: 690rpx;
}

.result_detail .line image {
    position: absolute;
    width: 8px;
    height: 37px;
    top: -23px;
}

.result_detail .line .left_img {
    left: 15px;
}

.result_detail .line .right_img {
    right: 15px;
}

.result_detail .line .table {
    text-align: center;
    /* font-size: 15px; */
    color: #1c1e2f;
    padding: 20rpx;
}

.result_detail .line .table .tr {
    display: flex;
    flex-direction: row;
    border-bottom: 1px solid #e6e6e6;
}

.result_detail .line .table .tr>text {
    flex: 1;
    padding: 10px 0;
    border-left: 1px solid #e6e6e6;
}

.result_detail .line .table .tr text:first-child {
    border: none;
}

.result_detail .line .text_box {
    text-align: left;
    padding: 10rpx;
  
}

.result_detail .line .text_box .h2 {
    margin-bottom: 15px;
    font-size: 16px;
    color: #1c1e2f;
}

.result_detail .line .text_box .p {
    color: #666;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content:space-between;

}

.result_detail .line .text_box .p text {
    width: 200rpx;
}

.result_detail .line .text_box .p view {
    /* flex: 1; */
    line-height: 150%;
}

.bg_502 {
    background: transparent;
}

.bg_502 .top {
    background: #fff;
    margin-left: -15px;
    margin-right: -15px;
    padding-left: 15px;
    border-radius: 10px;
    padding-bottom: 2px;
    margin-bottom: 10px;
    text-align: center;
}

