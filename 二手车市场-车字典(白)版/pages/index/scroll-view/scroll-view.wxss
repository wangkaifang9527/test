
.layout{
  width: 68%;
  height:100%;
  overflow: hidden;
  position: relative;
  margin:20% 16%;
}
.line{
  width: 100%;
  text-align: center;
  position: absolute;
}
.line image{
  width: 500rpx;
  
}
.one{
  left: -650rpx;
}
.one-show{
  animation: one 1s 
}
@keyframes one{
  0%{left: 0px}
  100%{left: 0px}
}

.finger{
  position: absolute;
  left:46%;
  top:68%;
  opacity: 0;
}
.finger-show{
  animation: finger .5s forwards .5s 
}
.finger image{
  width: 80rpx;
  height: 80rpx;
}
@keyframes finger{
  0%{transform: scale(1,1);top: 78%;opacity: 1;}
  60%{transform: scale(.8,.8);top: 68%;opacity: 1;}
  100%{transform: scale(1,1);top:68%;opacity: 0;}
}
.two{
  right: -100%;
}
.two-show{
  animation: two .5s forwards 1s
}
@keyframes two{
  0%{right: -100%;opacity: 1;}
  50%{right: 0%;opacity: 1;}
  100%{right: 0%;opacity: 1;}
}
.finger-2{
  position: absolute;
  left:70%;
  top:30%;
  opacity: 0;
}
.finger-2 image{
  width: 80rpx;
  height: 80rpx;
}
.finger-show-2{
  animation: finger-2 .5s forwards 1.5s 
}
@keyframes finger-2{
  0%{transform: scale(1,1);top: 30%;opacity: 1;}
  10%{transform: scale(1,1);top: 12%;opacity: 1;}
  30%{transform: scale(1,1);top: 12%;opacity: 1;}
  60%{transform: scale(.8,.8);top: 12%;opacity: 1;}
  80%{transform: scale(1,1);top: 12%;opacity: 1;}
  100%{transform: scale(1,1);top:12%;opacity: 0;}
}

.three{
  opacity: 0
}
.three-show{
  animation: three 0.5s forwards 2s
}
@keyframes three{
  0%{right: 0%;opacity: 1;}
  100%{right: 0%;opacity: 1;}
}
.four{
  right: -100%;
}
.four-show{
  animation: four .5s forwards 2.5s
}
@keyframes four{
  0%{right: -100%;opacity: 1;}
  50%{right: 0%;opacity: 1;}
  100%{right: 0%;opacity: 1;}
}

.finger-3{
  position: absolute;
  left:46%;
  top:68%;
  opacity: 0;
}
.finger-3 image{
  width: 80rpx;
  height: 80rpx;
}
.finger-show-3{
