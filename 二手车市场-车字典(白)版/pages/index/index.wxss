
@import "/template/t-car-list/t-car-list.wxss"; 



/*标题*/
.title{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between; 
  text-align: center;
}
.title .one{
  width: 132rpx;
  line-height: 35rpx;
  min-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;   
}
.title .one view{
  min-width: 132rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;   
}
.title .one image{
