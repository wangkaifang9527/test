  height: 70rpx;
  background: #E6E6E6;
  line-height: 73rpx;
  color: #999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}
.title .two image{
  width: 30rpx;
  height: 30rpx;
  
}
.title .three{
  width: 140rpx;
  color: #13344B;
  /*animation: arrow1 1.2s infinite; */
