}

.btn-contact{
  box-shadow:0px 0px 0px rgba(0,0,0,0);
  border-radius:0rpx;
  width:100%;
  font-size:28rpx;
}


.new{
  width:0rpx;
  height:0rpx;
  position:relative;
  left:0%;
  margin-top:-110rpx;
  animation:new 1s infinite;
}
@keyframes new{
  0%{transform: scale(.6,.6);}
  20%{transform: rotate(-10deg)}
  80%{transform: rotate(0deg)}
  100%{transform: scale(1,1);}
}













